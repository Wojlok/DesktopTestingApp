<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel"
        d:DataContext="{d:DesignInstance Type={x:Type viewmodel:MainVM}}"
        mc:Ignorable="d"
        MinHeight="250" MinWidth="360"
        Title="Тестовое задание" Icon="/icons8-math-100.ico" Height="400" Width="360">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Options Menu -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Function List -->
            <ListBox
                 ItemsSource="{Binding FunctionsList}"
                 SelectedValue="{Binding CurrentFunction}"
                 Grid.Column="0"/>

            <!-- Coefficient Menu -->
            <StackPanel Orientation="Vertical" Grid.Column="1" MinHeight="110">
                <Label Content="{Binding CurrentFunction.FunctionText}"
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                <DockPanel LastChildFill="True">
                    <Label Content="a" Width="20" HorizontalContentAlignment="Center"/>
                    <TextBox Text="{Binding CurrentFunction.A.Text, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="200"  HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                    </TextBox>
                </DockPanel>
                <DockPanel>
                    <Label Content="b" Width="20" HorizontalContentAlignment="Center"/>
                    <TextBox Text="{Binding CurrentFunction.B.Text, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="200"  HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="c" Width="20" HorizontalContentAlignment="Center"/>
                    <ComboBox
                        SelectedItem="{Binding CurrentFunction.C, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ItemsSource="{Binding CurrentFunction.CList}" MinWidth="200" HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                </DockPanel>
            </StackPanel>
        </Grid>
        
        <!-- Result Table -->
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding TableRows}" Grid.ColumnSpan="2" Margin="0,0,0,0" Grid.Row="1" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding X.Text, UpdateSourceTrigger=PropertyChanged}" 
                                    Header="x">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Y.Text, UpdateSourceTrigger=PropertyChanged}"
                                    Header="y">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn IsReadOnly="True"  Width="*"
                                    Binding="{Binding Func}" Header="f(x,y)">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}" >
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1 1 1 1"/>
                    <Setter Property="Margin" Value="-1,-1,-1,0" />
                    <Setter Property="Height" Value="28" />
                    <Setter Property="Width" Value="auto"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </Grid>
</Window>
